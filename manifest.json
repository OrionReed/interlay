{
  "manifest_version": 3,
  "name": "Interlay",
  "version": "0.1",
  "description": "Augment the web with new interface affordances.",
  "icons": {
    "48": "icons/interlay-48.png",
    "96": "icons/interlay-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "interlay@orionreed.com",
      "strict_min_version": "42.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/interlay.js",
        "dist/index.js"
      ],
      "css": [
        "dist/index.css"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "action": {
    "default_icon": "icons/interlay-48.png",
    "default_title": "Interlay"
  }
}