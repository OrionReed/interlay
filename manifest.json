{
  "manifest_version": 3,
  "name": "Interlay",
  "version": "0.1",
  "description": "Augment the web with new interface affordances.",
  "icons": {
    "48": "icons/interlay-48.png",
    "96": "icons/interlay-96.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; font-src 'self' https://unpkg.com;",
  "web_accessible_resources": [
    {
      "resources": [
        "dist/index.js",
        "dist/index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/interlay.js",
        "dist/index.js"
      ],
      "css": [
        "dist/index.css"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "action": {
    "default_icon": "icons/interlay-48.png",
    "default_title": "Interlay"
  }
}